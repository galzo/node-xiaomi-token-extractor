{
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/__tests__"],
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2019",
      "dom"
    ],
    "module": "commonjs",
    "rootDir": "./src",  
    "types": ["node"],  
    "declaration": true,
    "outDir": "./build", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
